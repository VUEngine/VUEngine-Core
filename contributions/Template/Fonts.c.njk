FontSpec* const _fonts[] =
{
	(FontSpec*)&DefaultFontSpec,
	(FontSpec*)&ProfilerFontSpec,
	(FontSpec*)&DebugFontSpec,
	{% if itemNames %}
	{%- for itemName in itemNames | sort -%}
	(FontSpec*)&{{ itemName }}FontSpec,
	{% endfor -%}
	{% endif %}
	NULL
