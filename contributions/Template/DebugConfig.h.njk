{%- set debug = project.items.DebugMacros.project -%}

{%- import 'templates/partials/macros.njk' as macros -%}
{% include('templates/partials/fileHeader/fileHeader.h.njk') %}

#ifndef	DEBUG_CONFIG_H_
#undef	DEBUG_CONFIG_H_

{{ macros.sectionHeader('Debug Macros') }}
{% for macro in debug.macros | sort(false, false, "name") -%}
{% set macroName = ['__', macro.name | toUpperSnakeCase] | join %}
#undef {{ macroName }}
{% if macro.type == 'define' -%}
#define {{ macroName }} 
{% elseif macro.type != 'undefine' -%}
#define {{ macroName }} {{ macro.value | formatValue | safe }}
{% endif -%}

{%- endfor %}
#endif
