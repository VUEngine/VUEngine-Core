{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean -f makefile-game -e CLEAN_TYPE=${input:cleanType} -C ${command:vbde.getWorkspaceRoot}",
            "windows": {
                "command": "${command:vbde.getPath}\\batch\\clean.bat ${command:vbde.getWorkspaceRoot} ${input:cleanType}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make all -f makefile-game -e TYPE=${input:buildType} -C ${command:vbde.getWorkspaceRoot}",
            "windows": {
                "command": "${command:vbde.getPath}\\batch\\build.bat ${command:vbde.getWorkspaceRoot} vuengine/core ${input:buildType}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "mednafen",
            "windows": {
                "command": "${command:vbde.getPath}\\tools\\win\\mednafen\\mednafen.exe"
            },
            "args": [
                "${command:vbde.getWorkspaceRoot}\\build\\output.vb"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "command": "mednafen",
            "windows": {
                "command": "${command:vbde.getPath}\\tools\\win\\mednafen\\mednafen.exe"
            },
            "args": [
                "${command:vbde.getWorkspaceRoot}\\build\\output.vb"
            ],
            "dependsOn": ["Build"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "cleanType",
            "description": "Which build type do you want to remove processed files for?",
            "type": "pickString",
            "options": ["all", "debug", "tools", "beta", "release"],
            "default": "all"
        },
        {
            "id": "buildType",
            "description": "Which type do you want to build under?",
            "type": "pickString",
            "options": ["debug", "tools", "beta", "release"],
            "default": "tools"
        }
    ]
}